<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Original">

        <TextView
            android:id="@+id/Thoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/suez_one"
            android:text="Thời gian"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Nhietdo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Thoigian"
            android:fontFamily="@font/suez_one"
            android:text="Nhiệt độ (độ C)"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Doam"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Nhietdo"
            android:fontFamily="@font/suez_one"
            android:text="Độ ẩm (%)"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <!--        <TextView-->
        <!--            android:id="@+id/Anhsang"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_toRightOf="@+id/Doam"-->
        <!--            android:text="Ánh sáng"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="20dp"-->
        <!--            android:textStyle="bold" />-->


    </LinearLayout>

    <ListView
        android:id="@+id/LvThongtin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_back"
        android:layout_marginTop="65dp" />


    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/Gray"
        android:text="Quay lại"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spinnersensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LvThongtin"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/btn_back"
        android:scrollbarThumbVertical="@drawable/scrollbar_style"
        android:verticalScrollbarPosition="left" />

